<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/identityEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set Identity"/>

    <EditText
        android:id="@+id/emailEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set Email"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/sendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Send Data"/>

        <Button
            android:id="@+id/updateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update profile"/>
    </LinearLayout>



    <Button
        android:id="@+id/sendInApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send InApp"/>

    <Button
        android:id="@+id/sendInAppInterstitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Interstitial"/>

    <Button
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVE"/>

    <Button
        android:id="@+id/apiCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API CALL"/>

    <Button
        android:id="@+id/actionInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger App Inbox"/>

    <Button
        android:id="@+id/inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open App Inbox"/>

    <Button
        android:id="@+id/nativeDisplayTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Display TRIGGER"/>

    <TextView
        android:id="@+id/nativeText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hello World!" />

    <ImageView
        android:id="@+id/nativeImage"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>